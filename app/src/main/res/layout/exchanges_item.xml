<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card_view:cardCornerRadius="@dimen/cardview_default_radius"
        card_view:cardElevation="@dimen/cardview_default_elevation"
        card_view:cardUseCompatPadding="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_exchanges_1"
                android:layout_width="@dimen/size_48dp"
                android:layout_height="@dimen/size_48dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:contentDescription="@string/exchangeplatformlogo"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toTopOf="parent"
                card_view:layout_constraintVertical_bias="0.0"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/tv_exchanges_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/text_margin"
                android:layout_marginEnd="@dimen/text_margin"
                card_view:layout_constraintEnd_toStartOf="@+id/iv_exchanges_link"
                card_view:layout_constraintStart_toEndOf="@+id/iv_exchanges_1"
                card_view:layout_constraintTop_toTopOf="@+id/iv_exchanges_1"
                tools:text="adhakjdha" />

            <TextView
                android:id="@+id/tv_exchanges_trust"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                card_view:drawableStartCompat="@drawable/ic_trust"
                card_view:layout_constraintBottom_toBottomOf="@+id/tv_exchanges_trade_vol"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintTop_toBottomOf="@+id/iv_exchanges_link"
                tools:text="9"
                card_view:drawableTint="@color/primaryColorGreen" />

            <TextView
                android:id="@+id/tv_exchanges_trade_vol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/small_text_size"
                card_view:layout_constraintBottom_toBottomOf="@+id/iv_exchanges_1"
                card_view:layout_constraintEnd_toStartOf="@+id/tv_exchanges_trust"
                card_view:layout_constraintHorizontal_bias="0.0"
                card_view:layout_constraintStart_toStartOf="@+id/tv_exchanges_name"
                card_view:layout_constraintTop_toBottomOf="@+id/tv_exchanges_name"
                card_view:layout_constraintVertical_bias="1.0"
                tools:text="sdfsfsdf" />

            <ImageButton
                android:id="@+id/iv_exchanges_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:background="@color/transparent"
                android:contentDescription="@string/visit_website"
                android:tint="?attr/colorAccent"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintTop_toTopOf="@+id/tv_exchanges_name"
                card_view:srcCompat="@drawable/ic_link" />

            <LinearLayout
                android:id="@+id/details"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="vertical"
                android:padding="8dp"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toBottomOf="@id/iv_exchanges_1">

                <TextView
                    android:id="@+id/tv_country"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="India" />

                <TextView
                    android:id="@+id/tv_year_established"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="1999" />

                <TextView
                    android:id="@+id/tv_exchage_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="dsdsddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddd" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>