<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Kripto" parent="Theme.AppCompat">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/coral</item>
        <item name="colorPrimaryVariant">@color/coral</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/coral</item>
        <item name="colorSecondaryVariant">@color/coral</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="buttonStyle">@style/Theme.Kripto.ButtonStyle</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/transparent</item>
        <item name="android:actionBarStyle">@style/Theme.Kripto.ActionBarStyle</item>
    </style>

    <style name="Theme.Kripto.ActionBarStyle" parent="Widget.AppCompat.ActionBar.Solid">
        <item name="android:titleTextStyle">@style/Theme.Kripto.ActionBar.TitleTextStyle</item>
        <item name="android:background">@color/black</item>
    </style>

    <style name="Theme.Kripto.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/coral</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Theme.Kripto.ButtonStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/coral</item>
    </style>


</resources>